<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/findmebg"
    android1:gravity="clip_vertical" >

    <Button
        android1:id="@+id/botonConf"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_marginBottom="81dp"
        android1:layout_marginLeft="15dp"
        android1:text="@string/config"
        android1:textColor="#ffffff"
        android1:textSize="18sp"
        android1:textStyle="bold|normal" />

    <Button
        android1:id="@+id/botonAcercaD"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/botonConf"
        android1:layout_alignBottom="@+id/botonConf"
        android1:layout_alignParentRight="true"
        android1:layout_marginRight="30dp"
        android1:text="@string/acerca"
        android1:textColor="#ffffff"
        android1:textSize="18sp"
        android1:textStyle="bold|normal" />

    <ToggleButton
        android1:id="@+id/botonImagen"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/botonConf"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="70dp"
        android1:drawableTop="@drawable/ic_launcher"
        android1:text="ToggleButton"
        android1:textOff="Desactivado"
        android1:textOn="Activado" />

    <TextView
        android1:id="@+id/lblestado"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_alignRight="@+id/botonImagen"
        android1:layout_marginTop="19dp"
        android1:text="Estado:"
        android1:textAppearance="?android:attr/textAppearanceSmall"
        android1:textColor="#ffffff" />

</RelativeLayout>